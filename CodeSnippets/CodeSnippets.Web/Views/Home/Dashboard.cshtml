@{
    @using CodeSnippets.Data.Models;
    ViewData["Title"] = "Home Page";
}
@model List<Snippet>

<table>
    <tr>
        <th>Name</th>
        <th>Code</th>
        <th></th>
    </tr>
    @foreach(var snippet in Model)
    {
        <tr>
            <td>@snippet.Name</td>
            <td>@snippet.Code</td>
            <td><a asp-controller="Home" asp-action="UpdateSnippet" asp-route-id ="@snippet.SnippetId" class="btn btn-outline-primary">Update</a>
                <a asp-controller="Home" asp-action="DeleteSnippet" asp-route-id ="@snippet.SnippetId" class="btn btn-outline-primary">Delete</a></td>
        </tr>
    }
</table>

<a asp-controller="Home" asp-action="AddSnippet" class="btn btn-outline-primary">Add Snippet</a>